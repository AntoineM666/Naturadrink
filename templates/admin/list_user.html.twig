{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1> Liste des utilisateurs</h1>
        <table class="table">
            <thead>
        
                <th scope="col">id</th>
                <th scope="col">email</th>
                <th scope="col">roles</th>
                <th scope="col">verif</th>
                <th scope="col">action</th>
            
            </thead>
            <tbody>
            {% for users in user %}
                <tr>
                    <td >{{ users.id }}</td>
                    <td>{{ users.email }}</td>
                    <td>{% for roles in users.roles %}
                            {% if roles == "ROLE_USER" %}
                            utilisateurs
                            {% elseif roles == "ROLE_PRO"  %}
                            pro
                            {% elseif roles == "ROLE_ADMIN"  %}
                            ADMIN
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td></td>
                    <td><a href="{{path('edit_user', {'id': users.id}) }}" class="btn btn-warning">modifier</a> {{ include('admin/deleteuser.html.twig') }}
                    </td>
                   
                </tr>
            {% endfor %}
            </tbody>

        </table>
</div>

{% endblock %}
