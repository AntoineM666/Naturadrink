{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des produits</h1>
</div>
    {% for message in app.session.flashbag.get('message') %}
      <div class="container">
            <div class="alert alert-success" role="alert">
            {{ message }}
            </div>
    </div> 
      {% endfor %}
<a href="{{ path('product_new') }}" class="btn btn-success">Ajouter un nouveau produit</a>
    <div class="container">
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                
                <th>Price</th>
             
                <th>Filename</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                
                <td>{{ product.price }}</td>
              
                <td>{{ product.filename }}</td>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
             
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>   
</div>
 
{% endblock %}
